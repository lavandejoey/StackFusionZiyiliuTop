server {
    listen 443 ssl; # IPv4
    listen [::]:443 ssl; # IPv6

    server_name www.ziyiliu.top;

    ssl_certificate /etc/ssl/ziyiliu.top.pem;
    ssl_certificate_key /etc/ssl/ziyiliu.top.key;

    # Only support higher protocols
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:TLS_AES_128_GCM_SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';

    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Root domain redirection to www
    if ($host = 'ziyiliu.top') {
        return 301 https://www.ziyiliu.top$request_uri;
    }

    location / {
        proxy_redirect off;
        proxy_pass http://127.0.0.1:2069;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}