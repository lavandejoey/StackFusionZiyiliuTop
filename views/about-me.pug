    script.
        window.addEventListener('DOMContentLoaded', function () {
            adjustFixedContainerWidth();
        });
        window.addEventListener('resize', function () {
            adjustFixedContainerWidth();
        });

        function adjustFixedContainerWidth() {
            const parentElement = document.querySelector('.d-none.d-lg-block');
            const fixedContainer = document.querySelector('.fixed-container');
            if (parentElement && fixedContainer) {
                fixedContainer.style.width = (parentElement.clientWidth * 0.25) + 'px';

            }
        }
        document.addEventListener("DOMContentLoaded", function () {
            const bookIcon = document.querySelector("#book-icon");
            const internIcon = document.querySelector("#briefcase-icon");
            const educationCircles = document.querySelectorAll(".education-circle");
            const internshipCircles = document.querySelectorAll(".internship-circle");
            const svg = document.querySelector("#timeline-line");

            if (!bookIcon || educationCircles.length === 0 ||
                !internIcon || internshipCircles.length === 0 ||
                !svg) {
                return; // Exit if the required elements are not found
            }

            // Get the last circle element
            const lastEduCircle = educationCircles[educationCircles.length - 1];
            const lastInternCircle = internshipCircles[internshipCircles.length - 1];

            // Get bounding rectangles
            const bookIconRect = bookIcon.getBoundingClientRect();
            const internIconRect = internIcon.getBoundingClientRect();
            const lastEduCircleRect = lastEduCircle.getBoundingClientRect();
            const lastInternCircleRect = lastInternCircle.getBoundingClientRect();
            const svgRect = svg.getBoundingClientRect();

            // Traverse icon and circle pairs
            const iconRects = [bookIconRect, internIconRect];
            const circleRects = [lastEduCircleRect, lastInternCircleRect];

            for (let i = 0; i < iconRects.length; i++) {
                // Get the bounding rectangles
                const iconRect = iconRects[i];
                const circleRect = circleRects[i];
                // Calculate the bottom center of the icon
                const iconBottomY = iconRect.bottom - svgRect.top;
                // Calculate the center of the circle
                const circleCenterY = circleRect.top + circleRect.height / 2 - svgRect.top;
                // Calculate the center of the last circle
                const circleX = circleRect.left + circleRect.width / 2 - svgRect.left;

                // Create a line element
                const line = document.createElementNS("http://www.w3.org/2000/svg", "line");
                line.setAttribute("x1", circleX);
                line.setAttribute("x2", circleX);
                line.setAttribute("y1", iconBottomY);
                line.setAttribute("y2", circleCenterY);
                line.setAttribute("stroke", "gray");
                line.setAttribute("stroke-width", "1");

                // Append the line to the SVG
                svg.appendChild(line);
            }
        });
