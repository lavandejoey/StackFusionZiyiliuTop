extends layout

block content
    div.container-fluid.flex-grow-1.d-flex.justify-content-center.align-items-center(style='height: 100%;')
        .container.mt-1.d-md-flex.flex-md-column.justify-content-md-between
            .row.d-flex.justify-content-evenly
                // Left Column: Subtitle context and body context, social media icons
                .col-md-5.my-auto.d-flex.flex-column
                    h1.mb-0.text-center
                        | #{__("Hiiiiiiiii!")}
                    h2.mb-5.text-center
                        | #{__("I'm glad you're here!")}
                    h5.my-5.text-center
                        | #{__("Got questions, feedback, or want to connect?")}
                        | #{__("Reach out via my social media channels or email.")}
                        | #{__("Let's collaborate!")}
                    // Flex container for icons with space between icons
                    .d-flex.my-5.justify-content-evenly
                        // GitHub
                        a(href='https://github.com/lavandejoey', target="_blank", class="mr-3")
                            i.fab.fa-github.fa-2x(style='color: #333')

                        // LinkedIn
                        a(href='https://linkedin.com/in/ziyi-liu-88b872179/', target="_blank")
                            i.fab.fa-linkedin.fa-2x(style='color: #0077B5')

                        // WhatsApp
                        a(href='https://wa.me/330749976242', target="_blank", class="mr-3")
                            i.fab.fa-whatsapp.fa-2x(style='color: #25D366')

                        // Instagram
                        a(href='https://www.instagram.com/lavandecn/', target="_blank", class="mr-3")
                            i.fab.fa-instagram.fa-2x(style='color: #E4405F')

                // Separator for md and larger screens
                .d-none.d-md-flex.justify-content-center.align-items-center.col-md-1
                    hr.bg-secondary.my-0(style='width: 1px; height: 80%;')

                // Separator for smaller screens
                .d-block.d-md-none.col-12
                    hr.bg-secondary

                // Right Column: Simple guidance content and email form
                .col-md-5.my-auto
                    h4.mb-4 #{__("or, start a chat ~")}
                    // TODO: Add a form to send an email
                    form(method='POST', action='#', id='contact-form')
                        input(type='hidden', name='_csrf', value=csrfToken)
                        .row.justify-content-around
                            .form-group.col-md-6.mb-3
                                input#surname.form-control(type="text", name="surname", placeholder=__("Surname"), required)
                            .form-group.col-md-6.mb-3
                                input#first-name.form-control(type="text", name="firstName", placeholder=__("First Name"), required)
                        .form-group.mb-3
                            input#email.form-control(type="email", name="email", placeholder=__("Email"), required)
                        .form-group.mb-3
                            textarea#message.form-control(name="message", rows="5", placeholder=__("Message"), required)
                        button.btn.btn-primary(type="submit", id="send-button")
                            span #{__("Send")}
                            i.fas.fa-paper-plane.mx-2#send-icon

    style.
        /* Ensure the icon is positioned so it can move */
        #send-icon {
            display: inline-block;
            position: relative;
            transition: color 0.2s, transform 5s ease-in, opacity 1s ease-in;
        }

        /* Define the animation */
        @keyframes flyAway {
            to {
                color: #bc6c25;
                transform: translate(40vw, -50vh) scale(3);
                opacity: 0;
            }
        }

        /* Class to trigger the animation */
        .animate-fly-away {
            animation: flyAway 1s forwards;
        }

    script.
        document.getElementById('send-button').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent form submission to see the animation
            const icon = document.getElementById('send-icon');
            icon.classList.add('animate-fly-away');

            // Optionally, submit the form after the animation
            setTimeout(function () {
                // Remove the icon
                icon.remove();
                // Submit the form
                document.querySelector('form').submit();
            }, 1000); // Delay equal to animation duration
        });
